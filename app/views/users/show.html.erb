<h1 align="center"> Showing details of =  <%= @userdetials.username %></h1>


<div class="well col-xs-8 col-xs-offset-2">
    
    <div class="center">
    
        <p style="color:blue"><b  style="color:black">UserName :</b> <%=@userdetials.username%></p>
        <p style="color:blue"><b  style="color:black">Email    : </b><%=@userdetials.email%></p>
        <p style="color:blue"><b  style="color:black">Password : </b><%=@userdetials.password%></p>


        <div class="article-actions">

            <%= link_to "Back to User List" , users_path, class: "btn btn-xs btn-primary" %> 
            <%= link_to "Edit details" , edit_user_path(@userdetials), class: "btn btn-xs btn-success"%>
            <%= link_to "Delete this article" , user_path(@userdetials),method: :delete, data: {confirm: "Are you sure.."}, class: "btn btn-xs btn-danger" %> 
            
        </div>

    </div>
    
</div>
